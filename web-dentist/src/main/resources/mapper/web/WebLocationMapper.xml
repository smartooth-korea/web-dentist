	<!-- 국가 코드 및 정보 조회 -->
    <select id="selectNationalInfo" parameterType="String" resultType="co.smartooth.web.vo.WebLocationVO">
		
		SELECT 
			 ISO_ALPHA2
			,ISO_ALPHA3
			,ISO_NUMERIC
			,CONTINENT_CODE
			,NATIONAL_NAME_KOR
			,NATIONAL_NAME_ENG
			,GMT
		FROM ST_NATIONAL_INFO
		WHERE 1=1
		AND ISO_ALPHA2 = #{isoAlpha2}
				
    </select>
    
    
    
    

